#include<stdio.h>

int main()
{
    int n,count;
    char s[101];
    scanf("%d",&n);
    scanf("%s",s);
    for(int i=0;i<n;)
    {
        if(s[i]=='0' && s[i+1]=='1' && s[i+2]=='0')
        {
            count++;
            i=i+3;
        }//joey tribbiani
        else{
            i++;
        }
    }
    printf("%d",count);
    //subscibe its khatri music
}
